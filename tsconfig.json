{
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "compilerOptions": {
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    // Alias
    "baseUrl": "./src",
    "paths": {
      "@config/*": ["config/*"],
      "@services/*": ["services/*"],
      "@utils/*": ["utils/*"],
      "@errors/*": ["errors/*"],
      "@schemas/*": ["schemas/*"],
      "@controllers/*": ["controllers/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["src"]
}
